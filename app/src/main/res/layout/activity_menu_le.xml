<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuLeActivity">

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16sp"
        android:text="Gesundheitsziele von\nM. Mustermann"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/secondary"/>

    <ImageButton
        android:id="@+id/btnSettings"
        android:layout_width="48sp"
        android:layout_height="48sp"
        android:background="@color/secondary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_info_details"
        android:contentDescription="Einstellungen" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/txtTitle">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alignmentMode="alignMargins"
            android:columnCount="2"
            android:rowCount="10">

            <Button
                android:layout_width="190dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:backgroundTint="@color/white"
                android:text="Beispiel-Ziel:\n10 000 Schritte"
                android:textSize="18sp"
                android:textColor="@color/secondary"
                android:textAllCaps="false"
                android:layout_row="0"
                android:layout_column="0"/>

            <Button
                android:layout_width="190dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:backgroundTint="@color/white"
                android:text="Beispiel-Ziel:\n80 kg"
                android:textSize="18sp"
                android:textColor="@color/secondary"
                android:textAllCaps="false"
                android:layout_row="0"
                android:layout_column="1"/>

            <Button
                android:layout_width="190dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:backgroundTint="@color/white"
                android:text="Beispiel-Ziel:\n70 kg"
                android:textSize="18sp"
                android:textColor="@color/secondary"
                android:textAllCaps="false"
                android:layout_row="1"
                android:layout_column="0"/>

            <Button
                android:layout_width="190dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:backgroundTint="@color/white"
                android:text="Beispiel-Ziel:\n40 000 Schritte"
                android:textSize="18sp"
                android:textColor="@color/secondary"
                android:textAllCaps="false"
                android:layout_row="1"
                android:layout_column="1"/>

            <Button
                android:layout_width="190dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:backgroundTint="@color/white"
                android:text="Beispiel-Ziel:\n10 000 Schritte"
                android:textSize="18sp"
                android:textColor="@color/secondary"
                android:textAllCaps="false"
                android:layout_row="2"
                android:layout_column="0"/>

            <Button
                android:layout_width="190dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:backgroundTint="@color/white"
                android:text="Beispiel-Ziel:\n80 kg"
                android:textSize="18sp"
                android:textColor="@color/secondary"
                android:textAllCaps="false"
                android:layout_row="2"
                android:layout_column="1"/>

            <Button
                android:layout_width="190dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:backgroundTint="@color/white"
                android:text="Beispiel-Ziel:\n70 kg"
                android:textSize="18sp"
                android:textColor="@color/secondary"
                android:textAllCaps="false"
                android:layout_row="3"
                android:layout_column="0"/>

            <Button
                android:layout_width="190dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:backgroundTint="@color/white"
                android:text="Beispiel-Ziel:\n40 000 Schritte"
                android:textSize="18sp"
                android:textColor="@color/secondary"
                android:textAllCaps="false"
                android:layout_row="3"
                android:layout_column="1"/>


            <Button
                android:layout_width="190dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:backgroundTint="@color/white"
                android:text="Beispiel-Ziel:\n10 000 Schritte"
                android:textSize="18sp"
                android:textColor="@color/secondary"
                android:textAllCaps="false"
                android:layout_row="4"
                android:layout_column="0"/>

            <Button
                android:layout_width="190dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:backgroundTint="@color/white"
                android:text="Beispiel-Ziel:\n80 kg"
                android:textSize="18sp"
                android:textColor="@color/secondary"
                android:textAllCaps="false"
                android:layout_row="4"
                android:layout_column="1"/>

            <Button
                android:layout_width="190dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:backgroundTint="@color/white"
                android:text="Beispiel-Ziel:\n70 kg"
                android:textSize="18sp"
                android:textColor="@color/secondary"
                android:textAllCaps="false"
                android:layout_row="5"
                android:layout_column="0"/>

            <Button
                android:layout_width="190dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:backgroundTint="@color/white"
                android:text="Beispiel-Ziel:\n40 000 Schritte"
                android:textSize="18sp"
                android:textColor="@color/secondary"
                android:textAllCaps="false"
                android:layout_row="5"
                android:layout_column="1"/>

        </GridLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/viewSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/secondary"
        app:srcCompat="@android:drawable/menu_frame"
        app:layout_constraintTop_toBottomOf="@id/btnSettings"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:backgroundTint="@color/white"
            android:textColor="@color/secondary"
            android:textSize="16sp"
            android:text="Patientendaten" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
